# ==========================================
# AI BOX - Production Environment Configuration
# Copy to .env and customize for your deployment
# ==========================================

# ==========================================
# GENERAL SETTINGS
# ==========================================
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false
IMAGE_TAG=latest

# ==========================================
# SERVICE PORTS
# ==========================================
API_GATEWAY_PORT=8000
MODEL_SERVER_PORT=8001
DATA_MANAGER_PORT=8002
POSTGRES_PORT=5432
REDIS_PORT=6379
MONGO_PORT=27017
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# PostgreSQL
POSTGRES_DB=aibox_prod
POSTGRES_USER=aibox
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!
DATABASE_URL=postgresql://aibox:CHANGE_THIS_STRONG_PASSWORD_123!@postgres:5432/aibox_prod

# Redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD_456!@redis:6379/0

# MongoDB
MONGO_USER=aibox
MONGO_PASSWORD=CHANGE_THIS_MONGO_PASSWORD_789!
MONGO_DB=aibox_prod
MONGODB_URL=mongodb://aibox:CHANGE_THIS_MONGO_PASSWORD_789!@mongo:27017/aibox_prod

# ==========================================
# AI MODEL CONFIGURATION
# ==========================================
# Device Selection (auto, cpu, cuda, hailo, npu)
DEVICE=auto
AI_PLATFORM=auto

# Model Server Configuration
MODEL_SERVER_TARGET=production
BATCH_SIZE=4
MAX_WORKERS=2
OPTIMIZATION_LEVEL=medium
GPU_MEMORY_FRACTION=0.8

# Model Paths
MODEL_PATH=/app/models
CACHE_PATH=/app/cache
DATA_PATH=./data

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
# JWT Configuration
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET_KEY_VERY_LONG_AND_SECURE_STRING_987654321
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# ==========================================
# MONITORING CONFIGURATION
# ==========================================
# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD_ABC!

# Prometheus
PROMETHEUS_RETENTION=30d

# ==========================================
# BACKUP CONFIGURATION
# ==========================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/app/backups

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=aibox-backups-prod
AWS_REGION=us-east-1

# ==========================================
# NOTIFICATION CONFIGURATION
# ==========================================
# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=AI Box Production <noreply@yourdomain.com>

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ==========================================
# SSL/TLS CONFIGURATION
# ==========================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ==========================================
# PLATFORM-SPECIFIC OVERRIDES
# ==========================================
# These will be set automatically by deployment scripts

# For Raspberry Pi 5 + Hailo-8
# DEVICE=hailo
# AI_PLATFORM=raspberry-pi-5
# MAX_WORKERS=2
# BATCH_SIZE=1
# MODEL_SERVER_TARGET=raspberry-pi-5

# For Radxa Rock 5 ITX + NPU
# DEVICE=npu
# AI_PLATFORM=radxa-rock-5
# MAX_WORKERS=2
# BATCH_SIZE=2
# MODEL_SERVER_TARGET=radxa-rock-5

# For Jetson Nano + CUDA
# DEVICE=cuda
# AI_PLATFORM=jetson-nano
# MAX_WORKERS=1
# BATCH_SIZE=1
# MODEL_SERVER_TARGET=jetson-nano

# For Core i5 + GPU
# DEVICE=cuda
# AI_PLATFORM=core-i5
# MAX_WORKERS=4
# BATCH_SIZE=8
# MODEL_SERVER_TARGET=core-i5

# ==========================================
# RESOURCE LIMITS
# ==========================================
# API Gateway
API_GATEWAY_CPU_LIMIT=1.0
API_GATEWAY_MEMORY_LIMIT=512M

# Model Server
MODEL_SERVER_CPU_LIMIT=4.0
MODEL_SERVER_MEMORY_LIMIT=4G

# Data Manager
DATA_MANAGER_CPU_LIMIT=2.0
DATA_MANAGER_MEMORY_LIMIT=2G

# Database
POSTGRES_CPU_LIMIT=2.0
POSTGRES_MEMORY_LIMIT=2G
REDIS_CPU_LIMIT=1.0
REDIS_MEMORY_LIMIT=512M
MONGO_CPU_LIMIT=1.0
MONGO_MEMORY_LIMIT=1G
