# ==========================================
# AI BOX - Environment Configuration
# Copy this file to .env and customize values
# ==========================================

# ==========================================
# GENERAL SETTINGS
# ==========================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# ==========================================
# API CONFIGURATION
# ==========================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=300
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# PostgreSQL
DATABASE_URL=postgresql://aibox:aibox123@localhost:5432/aibox
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis
REDIS_URL=redis://:aibox123@localhost:6379
REDIS_DB=0
REDIS_TIMEOUT=5

# MongoDB
MONGODB_URL=mongodb://aibox:aibox123@localhost:27017/aibox

# ==========================================
# AI MODEL CONFIGURATION
# ==========================================
# Device Selection (auto, cpu, cuda, hailo, npu)
DEVICE=auto
AI_PLATFORM=cpu

# Model Paths
MODEL_PATH=/app/models
CACHE_PATH=/app/cache

# Performance Settings
BATCH_SIZE=4
MAX_WORKERS=4
OPTIMIZATION_LEVEL=medium
GPU_MEMORY_FRACTION=0.8

# ==========================================
# EDGE DEVICE CONFIGURATION
# ==========================================
EDGE_MODE=false
MEMORY_LIMIT=2GB

# Raspberry Pi 5 + Hailo-8
HAILO_ARCH=hailo8
HAILO_DEVICE=/dev/hailo0

# Radxa Rock 5 ITX
NPU_ARCH=rk3588
RKNN_DEVICE=/dev/rknpu

# Jetson Nano
JETSON_MODEL=nano
CUDA_DEVICE=0

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ==========================================
# MONITORING & LOGGING
# ==========================================
# Prometheus
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=aibox123

# Logging
LOG_FILE=/app/logs/aibox.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# ==========================================
# BACKUP & STORAGE
# ==========================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/app/backups

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
# Jupyter Notebook
JUPYTER_TOKEN=aibox123
JUPYTER_PORT=8888

# PgAdmin
PGADMIN_EMAIL=admin@aibox.local
PGADMIN_PASSWORD=aibox123
PGLADMIN_PORT=5050
